<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressBar?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vladkostromin.filedatemarkerproject.controllers.MainController"
      spacing="10.0">

  <padding>
    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
  </padding>

  <!-- Кнопка для выбора диска -->
  <Button text="Выбрать диск" onAction="#handleSelectedDisk"/>

  <!-- Отображение выбранного диска -->
  <HBox spacing="5.0">
    <Label text="Выбранная директория:"/>
    <TextField fx:id="directoryPathField" editable="false" HBox.hgrow="ALWAYS"/>
  </HBox>

  <!-- Поле для ввода минимального количества дней -->
  <HBox spacing="5.0">
    <Label text="Минимальное количество дней:"/>
    <TextField fx:id="minDaysField" promptText="0" maxWidth="50"/>
  </HBox>

  <!-- Кнопки для запуска сканирования и отмены -->
  <HBox spacing="5.0">
    <Button text="Сканировать директорию" onAction="#handleScanAndMark"/>
    <Button text="Отменить" onAction="#handleCancel"/>
  </HBox>

  <!-- Индикатор прогресса -->
  <ProgressBar fx:id="progressBar" prefWidth="600" progress="0.0"/>

  <!-- Текстовая область для вывода результатов -->
  <TextArea fx:id="outputTextArea" editable="false" prefHeight="200" VBox.vgrow="ALWAYS"/>

</VBox>